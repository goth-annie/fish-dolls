<html>
<head>
    <meta charset="utf-8"/>
    <title>Redirect...</title>
    <!-- JS 無効時は英語へ -->
    <meta http-equiv="refresh" content="3; url=/en/home"/>
    <script>
        const base = '{{Astro.base}}';
        const lang = navigator.language.toLowerCase();
        if (lang.startsWith('ja')) location.replace(base + 'ja/home');
        else location.replace(base + 'en/home');
    </script>

    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: sans-serif
        }
    </style>
</head>
<body>Redirecting…</body>
</html>
